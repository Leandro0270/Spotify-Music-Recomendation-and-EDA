{
  "name": "Python 3 with CUDA",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md", "streamlit_app.py"]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter" 
      ]
    }
  },
  "updateContentCommand": "/bin/bash -c \"[ -f packages.txt ] && sudo apt-get update && sudo apt-get upgrade -y && xargs sudo apt-get install -y <packages.txt; [ -f requirements.txt ] && pip3 install -r requirements.txt; echo 'âœ… Dependencies installed';\"",
  "postAttachCommand": "streamlit run ./streamlit_app.py --server.enableCORS false --server.enableXsrfProtection false",
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501],
  "runArgs": ["--gpus", "all"]
}
